<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="watermaps.hackathon.com.br.watermaps.HomeActivity"
    android:background="@color/colorBackground">

    <Button
        android:text="Sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:background="@drawable/screen_border" />

    <Button
        android:text="Ofertar Serviço"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnOfertarServico"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:background="@drawable/screen_border"
        android:layout_marginBottom="102dp"
        android:layout_above="@+id/btnExit"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Ofertar Água"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnOfertarAgua"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:background="@drawable/screen_border"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/btnExit"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Água por perto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnMarketplace"
        android:textColor="@color/cast_expanded_controller_text_color"
        android:background="@drawable/screen_border"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLocalizacao"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp"
        android:textColor="@color/colorText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNome"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorText" />

    <Button
        android:text="Infográfico"
        android:background="@drawable/screen_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnMarketplace"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/btnInfografico"
        android:textColor="@color/colorText" />

    <Button
        android:text="Google Earth"
        android:background="@drawable/screen_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGE"
        android:textColor="@color/colorText"
        android:layout_above="@+id/btnInfografico"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />
</RelativeLayout>
